<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/startFragment">
    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.cryptotracker.screens.start.StartFragment"
        android:label="fragment__start"
        tools:layout="@layout/fragment__start" >
        <action
            android:id="@+id/action_startFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_startFragment_to_cardFragment"
            app:destination="@id/cardFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.cryptotracker.screens.search.SearchFragment"
        android:label="fragment__search"
        tools:layout="@layout/fragment__search" >
        <action
            android:id="@+id/action_searchFragment_to_cardFragment"
            app:destination="@id/cardFragment" />
    </fragment>
    <fragment
        android:id="@+id/cardFragment"
        android:name="com.example.cryptotracker.screens.card.CardFragment"
        android:label="fragment__card"
        tools:layout="@layout/fragment__card" >
        <argument
            android:name="itemId"
            app:argType="integer" />
    </fragment>
</navigation>
